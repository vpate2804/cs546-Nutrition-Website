<form class="form-updateRecipe">
    <div class="card">
        <div class="card-header">
            <h3>Manage Recipe</h3>
        </div>

        <div class="flex-parent recipeform">
            <div class="flex-child-element card userdetails">
                <input id="id" hidden name="id" value="{{recipeData._id}}">
                <label class="form-label" for="name">Recipe Name:</label>
                <input class="form-control" type="text" name="name" id="name" value="{{recipeData.name}}"> 
                <br>
                <label class="form-label" for="recipeType">Select Recipe Type</label>
                <select class="form-select recipeType" name="recipeType" id="recipeType" aria-activedescendant="{{recipeData.recipeType}}">
                    <option value="Breakfast">Breakfast</option>
                    <option value="Lunch">Lunch</option>
                    <option value="Dinner">Dinner</option>
                    <option value="Snacks">Snacks</option>
                </select>
                <br>
                <label class="form-label" for="season">Select Season</label>
                <select class="season form-select" name="season" id="season" aria-activedescendant="{{recipeData.season}}">
                    <option value="All">All</option>
                    <option value="Spring">Spring</option>
                    <option value="Summer">Summer</option>
                    <option value="Fall">Fall</option>
                    <option value="Winter">Winter</option>
                </select>
                <br>
                <div id="ingredientsList">
                    <button type="submit" class="btn ingredient" id="addIngredient"><svg
                            xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-plus" viewBox="0 0 16 16">
                            <path
                                d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                        </svg></button>
                    <label class="form-label" for="ingredients">Ingredients:</label>
                    <button type="submit" class="btn ingredient" id="deleteIngredient" hidden>delete a new ingredient
                    </button>
                    {{#each recipeData.ingredients}}
                    <br>
                    <label class="form-label ingredient" for="ingredientName0"
                        id="ingredientNameLabel0">Ingredient Name:</label>
                    <br>
                    <input class="form-control ingredientName" type="text" name="ingredientName"
                        id="ingredientName0" value="{{@key}}">

                    <label class="form-label ingredient" for="ingredientAmount0"
                        id="ingredientAmountLabel0">Amount:</label>
                    <br>
                    <input class="form-control ingredientAmount" type="text" name="ingredientAmount"
                        id="ingredientAmount0" value="{{this}}">
                    {{/each}}
                </div>
                <br>
                <div id="nutritionDetailList">
                    <button type="submit" class="btn nutritionDetail" id="addNutritionDetail"><svg
                            xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-plus" viewBox="0 0 16 16">
                            <path
                                d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                        </svg></button>
                    <label class="form-label" for="nutritions">Nutrition Details:</label>
                    <button type="submit" class="btn nutritionDetail" id="deleteNutritionDetail" hidden>delete a new
                        nutrition
                    </button>
                    {{#each recipeData.nutritionDetails}}
                    <br>
                    <label class="form-label" for="nutritionDetailName0" class="nutritionDetail"
                        id="nutritionDetailNameLabel0">Nutrition
                        Name:</label>
                    <br>
                    <input class="form-control" type="text" name="nutritionDetailName" class="nutritionDetailName"
                        id="nutritionDetailName0" value="{{@key}}">

                    <label class="form-label" for="nutritionDetailAmount0" class="nutritionDetail"
                        id="nutritionDetailAmountLabel0">Amount:</label>
                    <br>
                    <input class="form-control" type="text" name="nutritionDetailAmount" class="nutritionDetailAmount"
                        id="nutritionDetailAmount0" value="{{this}}">
                        {{/each}}
                    <br>

                </div>
            </div>
            <div class="flex-child-element card recipedetails">
                <label class="form-label" for="preparationTime">Preparation Time (minutes):</label>
                <input class="form-control" type="text" name="preparationTime" id="preparationTime" value="{{recipeData.preparationTime}}">
                <br>
                <label class="form-label" for="cookTime">Cooking Time (minutes): </label>
                <input class="form-control" type="text" name="cookTime" id="cookTime" value="{{recipeData.cookTime}}">
                <br>
                <div id="foodGroupList">
                    <div>
                        <button type="submit" class="btn foodGroup" id="addFoodGroup"><svg
                                xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-plus" viewBox="0 0 16 16">
                                <path
                                    d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                            </svg></button>
                        <label class="form-label" for="foodgroup">Food Groups</label>
                        <button type="submit" class="btn foodGroup" id="deleteFoodGroup" hidden>delete a new food group
                        </button>
                        {{#each recipeData.foodGroup}}
                        <br>
                        <label class="form-label" for="foodGroup0" class="foodGroup" id="foodGroupLabel0">Food Group
                            Name:</label>
                        <br>
                        <input class="form-control" type="text" name="foodGroup" class="foodGroup" id="foodGroup0" value="{{this}}">
                        {{/each}}
                    </div>
                </div>
                <div id="recipeStepsList">
                    <button type="submit" class="btn recipeSteps" id="addRecipeSteps"><svg
                            xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-plus" viewBox="0 0 16 16">
                            <path
                                d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                        </svg></button>
                    <label class="form-label" for="recipestep">Recipe Steps:</label>
                    <button type="submit" class="btn recipeSteps" id="deleteRecipeSteps" hidden>delete a new recipe step
                    </button>
                    <br>
                    {{#each recipeData.recipeSteps}}
                    <label class="form-label" for="recipeSteps0" class="recipeSteps" id="recipeStepsLabel0">Recipe
                        Step:</label>
                    <br>
                    <input class="form-control" type="text" name="recipeSteps" class="recipeSteps" id="recipeSteps0" value="{{this}}">
                    <br>
    {{/each}}
                </div>
            </div>

        </div>
        <button class="btn" type="submit" id="updaterecipe">Update Recipe</button><br>
        <button class="btn" type="submit" id="deleterecipe">Delete Recipe</button>
        <p>{{error}}</p>
        <p id="error" class="error" hidden></p>
    </div>
</form>
<script src="https://code.jquery.com/jquery-2.2.4.min.js"
    integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
<script src="/public/js/updaterecipe.js"></script>